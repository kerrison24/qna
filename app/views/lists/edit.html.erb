<h1>Edit session</h1>
<%= form_for @list do |f| %>
  <% if @list.errors.any? %>
    <h2><%= pluralize(@list.errors.count, "error") %></h2>
    <ul>
      <% @list.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description, class: 'materialize-textarea' %>
  </p>

  <p>
    <%= f.submit 'Edit', class: 'waves-effect waves-light btn' %>
  </p>
<% end %><br>
<%= link_to 'Back', @user %>
