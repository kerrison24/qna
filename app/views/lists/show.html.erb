<h1><%= @list.title %></h1>
<h3><%= @user.name %></h3>
<p>
  <%= @list.description %>
</p>
<% if @list.questions.any? %>
  <ul class="collection">
    <% @questions.each do |question| %>
    <li class="collection-item">
      <%= question.title %>
      <%= render 'questions/like', { question: question } %>
    </li>
    <% end %>
  </ul>
<% end %>
<h2>Post a question</h2>
<div>
  <%= render 'questions/form' %>
</div>
<br>
<%= link_to 'Edit', edit_list_path(@list) %><br>
<%= link_to 'Back', root_url %>
